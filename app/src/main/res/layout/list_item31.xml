<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@drawable/bt_border"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/list_item31_tijiao_title"
                android:text="标题：XXX"
                android:textSize="25sp"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:lines="1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                 />
            <TextView

                android:id="@+id/list_item31_tijiao_time"
                android:text="提交时间：218-05-05 14:52:00"
                android:textSize="25sp"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/list_item31_zhuantai"
            android:layout_marginLeft="100dp"
            android:text="状态：未受理"
            android:textSize="25sp"
            android:lines="1"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/list_item31_huifunei"
                android:text="回复内容：----"
                android:textSize="25sp"
                android:ellipsize="end"
                android:lines="1"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/list_item31_huifutime"
                android:text="回复时间：----"
                android:lines="1"
                android:textSize="25sp"
                android:ellipsize="end"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>