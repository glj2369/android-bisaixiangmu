<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TiKu38_4Activity">
    <include layout="@layout/title_layout"/>
    <TextView
        android:layout_margin="20dp"
        android:text="@string/tiku_38_titile"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:textSize="25sp"
                android:text="乘客姓名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/tiku_38_name"
                android:hint="XXX"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:textSize="25sp"
                android:text="手机号码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/tiku_38_phone"
                android:hint="XXXXXXXXXXX"
                android:textColor="#000"
                android:textSize="25sp"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:textSize="25sp"
                android:text="上车地点："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/tiku_38_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
        <Button
            android:id="@+id/tiku_38_4_bt_next"
            android:text="下一步"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tiku_38_bt_select"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</LinearLayout>