<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".activity.TiKu31Activity">
    <LinearLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.64"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tiku_31_yijian"
            android:layout_marginRight="20dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:text="我的意见"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/tiku_31_title"
                android:textColor="#000"
                android:textSize="25sp"
                android:hint="标题"
                android:singleLine="true"
                android:background="@drawable/bt_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/bt_border"
            android:layout_height="200dp">
            <EditText
                android:id="@+id/tiku_31_content"
                android:textColor="#000"
                android:textSize="25sp"
                android:singleLine="false"
                android:hint="请输入您的意见"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/tiku_31_shouji"
                android:textColor="#000"
                android:textSize="25sp"
                android:hint="手机"
                android:singleLine="true"
                android:inputType="number"
                android:background="@drawable/bt_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <Button
            android:id="@+id/tiku_31_bt_save"
            android:layout_marginTop="30dp"
            android:text="提交"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>